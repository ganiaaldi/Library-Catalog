<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/ara</item>
    </style>


    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/berlin</item>
    </style>

    <style name="MediumText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/berlin</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SmallText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/berlin</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextInput" parent="Theme.AppCompat">
        <item name="android:textColorHint">#c4c4c8</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#011807</item>
        <item name="colorAccent">#c4c4c8</item>
        <item name="colorControlNormal">#c4c4c8</item>
        <item name="colorControlActivated">#011807</item>
        <item name="colorError">@android:color/holo_red_light</item>
    </style>

</resources>
